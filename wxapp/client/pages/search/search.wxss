.wrapper{
    padding: 15rpx;
}
.search-wrapper{
    padding: 30rpx;
    display: block;
}
.search-text{
    border: 1px solid #99FFFF;
    font-size: 32rpx;
    line-height: 60rpx;
    height: 60rpx;
    padding: 4rpx 10rpx;
    border-radius: 4rpx;
}
.search-btn{
    height: 80rpx;
    margin: 30rpx auto;
}

.result-wrapper{
    padding: 10rpx;
}
.search-wrapper-min{
    width: 100%;
    height: 60rpx;
    text-align: left;
}
.search-text-min{
    width: 450rpx;
    line-height: 40rpx;
    height: 40rpx;
    font-size: 28rpx;
    padding: 2rpx 10rpx;
    border: 1px solid #99FFFF;
    display: inline-block;
    text-align: left;
    border-radius: 4rpx;
    border: 1rpx solid #ccc;
}
.search-btn-min{
    line-height: 50rpx;
    height: 50rpx;
    padding:0;
    display: inline-block;
}
.result-list{
    margin-top: 10rpx;
}
.result-item{
    margin-bottom: 15rpx;
    background: #99FFFF;
    height: 220rpx;
    overflow: hidden;
    border-radius: 8rpx;
    font-size:24rpx;
}
.result-item:nth-of-type(2n){
    background:#CCFFFF;
}
.message{
    height: 50rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    text-align: center;
    margin-top: 10rpx;
}
.job-name,.publish-time,.company,.salary{
    display:inline-block;
    box-sizing: border-box;
    height:40rpx;
    width:50%;
    line-height: 40rpx;
    font-size: 24rpx;
    border: 2rpx solid #fff;
    padding:0 6rpx;
    overflow: hidden;
    white-space: nowrap;
}
.job-name,.company{
    border-left:none;
    text-align: left;
}
.publish-time,.salary{
    border-right:none;
    text-align: right;
}
.descible{
    overflow: hidden;
    text-emphasis: emphasis;
    padding: 0 6rpx;
    height: 100rpx;
}
.explain{
    line-height: 30rpx;
    height: 30rpx;
    text-align: center;
    font-size: 28rpx;
    margin-top: 10rpx;
}
.job-detail-wrapper{
    width: 100%;
    z-index: 100;
}
