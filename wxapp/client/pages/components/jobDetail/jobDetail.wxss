.job-detail{
    width: 100%;
    height: 100%;
    position: absolute;
    left:0;
    top:0;
    background: rgba(0,0,0,0.5);
    font-size: 30rpx;
}
.detial{
    width: 640rpx;
    height: 82%;
    margin: 6% auto 0;
    background: #fff;
    z-index: 100;
    border-radius: 8rpx;
}
.clear-btn{
    text-align: center;
    margin: 30rpx auto 0;
}

.job_name{
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
    text-decoration: underline;
}
.resume-info{
    text-align: center;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
}
.title{
    text-align: left;
    height: 40rpx;
    line-height: 40rpx;
    font-size:28rpx;
    padding-left: 20rpx;
    margin-top: 20rpx;
}
.descible, .required{
    padding: 10rpx 20rpx;
    text-indent: 2em;
    font-size: 26rpx;
    color:#777;
    text-align: justify;
}
.content{
    padding-bottom: 50rpx;
}
